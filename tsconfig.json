{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "dom",
      "es5",
      "es6"
    ],
    "sourceMap": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "downlevelIteration": true,
    "declaration": true,
    "composite": true,
    "outDir": "lib",
    "noEmit": false,
    "types": ["jest", "node"],
    "baseUrl": "src"
  },
  "include": [
    "src/**/*.ts",
    "@types"
  ],
  "exclude": [
    "node_modules/**/*",
    "build/**/*",
    "*.spec.ts"
  ]
}